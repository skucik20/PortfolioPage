
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    .hero-image {
        height: 100vh; /* Pełna wysokość widoku */
        width: 100%;
        overflow: hidden;
        position: relative;
        text-align: center;
    }

    .full-height {
        height: 100%;
        width: auto;
        object-fit: cover;
    }
</style>

<section id="home" class="section">

    <div class="row valign-wrapper" style="height: 100vh; margin: 0;">

        <div class="col s6">

            <div class="container">
                <div class="card white z-depth-3" style="border-radius: 15px"> 
                    <div class="card-content center-align">
                        <h1 class="blue-grey-text text-darken-2">@Name</h1>
                        <h4 class="grey-text text-darken-1">@Title</h4>
                    </div>

                </div>
            </div>
    
    
    
        </div>



        @* 
            <div class="container center-align">
                <h1>@Name</h1>
                <h2>@Title</h2>
            </div> *@

        <div class="col s6">
            <div class="hero-image valign-wrapper">
                <img src="images/Developper_02.jpg" class="responsive-img full-height" />
            </div>
        </div>

    </div>

</section>








@code {

    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Title { get; set; }

}
